<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:layout_margin="4dp" android:id="@+id/cardView2">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/date_text_horiz"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="right"
                android:textSize="12sp"/>

        <ImageView android:layout_width="match_parent" android:layout_height="104dp"
                   android:id="@+id/imageViewHoriz"
                   app:layout_constraintTop_toBottomOf="@+id/date_text_horiz"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                   app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/textTittleHoriz"
                  android:text="TestText"
                  android:textSize="12sp"
                  android:textStyle="bold"
                  android:textColor="@android:color/white"
                  android:background="@color/colorPrimaryLight"
                  android:layout_centerHorizontal="true"
                  android:ellipsize="end"
                  android:padding="4dp"
                  android:gravity="center"
                  android:lines="3"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageViewHoriz"
                  app:layout_constraintHorizontal_bias="0.0"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:id="@+id/textDescriptionHoriz"
                  android:text="TestText"
                  android:textSize="10sp"
                  android:textColor="@android:color/black"
                  android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
                  app:layout_constraintTop_toBottomOf="@+id/textTittleHoriz"
                  app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
