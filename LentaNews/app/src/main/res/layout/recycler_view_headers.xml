<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_margin="2dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_margin="2dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/headers"
                  android:text="TestTex"
                  android:textStyle="bold"
                  android:textSize="30sp"
                  android:textColor="@android:color/black" android:layout_alignParentStart="true"
                  android:layout_marginStart="0dp" android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="View"
                android:id="@+id/buttonView"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:layout_alignBottom="@+id/headers"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>t>

</android.support.v7.widget.CardView>
